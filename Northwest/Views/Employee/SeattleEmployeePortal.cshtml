
@{
    ViewBag.Title = "SeattleEmployeePortal";
}

    <div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Employee Dashboard</li>
    </ol>
    <!-- Icon Cards-->

    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-comments"></i>
                    </div>
                    <div class="mr-5">5 New Messages</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">View Messages</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-support"></i>
                    </div>
                    <div class="mr-5">3 Reports Awaiting Comparision</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">View Reports</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-pencil-square-o"></i>
                    </div>
                    <div class="mr-5">7 Reports Awaiting Summary</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">Write Summaries</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white o-hidden h-100" style="background-color:#d93e2b;">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-list"></i>
                    </div>
                    <div class="mr-5">Create New Reports</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">Create Report</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Outstanding Tasks
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Task Name</th>
                            <th style="text-align:center;">Days Outstanding</th>
                            <th style="text-align:center;">Importance <br /> (1-5)</th>
                            <th style="text-align:center;">Completed?</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>12/1/2017</td>
                            <td>Need Quote for Compound with CompoundID of 3544235</td>
                            <td style="text-align:center;">7</td>
                            <td style="text-align:center;">5</td>
                            <td style="text-align:center;"><button class="btn btn-primary">Complete Now</button></td>
                        </tr>
                        <tr>
                            <td>11/25/2017</td>
                            <td>Order Number 23214 Needs a Summary Created.</td>
                            <td style="text-align:center;">13</td>
                            <td style="text-align:center;">4</td>
                            <td style="text-align:center;"><button class="btn btn-primary">Complete Now</button></td>
                        </tr>
                        <tr>
                            <td>12/7/2017</td>
                            <td>Customer with CustomerID 321456 is Requesting an Update on the Testing of Their Compound with the CompoundID of 3544382.</td>
                            <td style="text-align:center;">1</td>
                            <td style="text-align:center;">4</td>
                            <td style="text-align:center;"><button class="btn btn-primary">Complete Now</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
            <!-- /.content-wrapper-->
            <footer class="sticky-footer">
                <div class="container">
                    <div class="text-center">
                        <small>Copyright © Northwest Labs, Inc. 2017</small>
                    </div>
                </div>
            </footer>

<div id="chatBox">
    <div class="card text-white o-hidden h-100 chatCardBox" style="display:none;">
        <div class="card-body">
            <p><b>Chat Box</b></p>
            <div class="border" style="height:180px; border-radius:5px; margin-bottom: 10px; font-size: 12px; overflow-y:auto; overflow-x: hidden;" id="chatComment">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="2" id="chatCommentEnter"></textarea>
            </div>
        </div>
    </div>
    <div class="card text-white o-hidden h-100 chatCard pointer">
        <div class="card-body">
            <div class="card-body-icon">
                <i class="fa fa-fw fa-comments" height="50px"></i>
            </div>
            <div class="mr-5">Ask questions through chat!</div>
        </div>
    </div>
</div>

<script>
    $('.chatCard').on('click', function () {
        $('.chatCardBox').fadeToggle();
    });

</script>
