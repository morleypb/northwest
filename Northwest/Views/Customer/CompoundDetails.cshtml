<script>
    var counter = 1;
    var counter2 = 1;
    var counter3 = 1;
    function showCompounds(id) {
        document.querySelectorAll('.fadeCompound_' + id).forEach(el => $(el).fadeToggle());
        if (id === 1) {
            if (counter === 1) {
                $('#clickCompound_' + id).css('background-color', 'rgba(0,123,255, .1)');
                counter = 0;
            }
            else {
                $('#clickCompound_' + id).css('background-color', 'white');
                counter = 1;
            }
        }
        else if(id === 2){
            if (counter2 === 1) {
                $('#clickCompound_' + id).css('background-color', 'rgba(0,123,255, .1)');
                counter2 = 0;
            }
            else {
                $('#clickCompound_' + id).css('background-color', 'white');
                counter2 = 1;
            }
        }
        else {
            if (counter3 === 1) {
                $('#clickCompound_' + id).css('background-color', 'rgba(0,123,255, .1)');
                counter3 = 0;
            }
            else {
                $('#clickCompound_' + id).css('background-color', 'white');
                counter3 = 1;
            }
        }
    }
</script>
